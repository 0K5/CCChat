<div class="jumbotron text-center">
        <h1>{{title}}</h1>
    <p>Chat with your student colleagues and only with student colleagues</p>
</div>
<div class="container">
        <div class="row">
            <div class="col-sm-4 frame" id="chatsContainer">
                    <ul id="chats"></ul>
                    <ul id="contacts"></ul>
            </div>
            <div class="col-sm-8 frame">
            <ul id="msgs"></ul>
            <div id="sendMsgContainer">
                <div  class="msj-rta macro">                        
                    <div class="text text-r" style="background:whitesmoke !important">
                        <input id="msgInput" placeholder="Type a message"/>
                    </div> 

                </div>
                <div id="sendCntrl" style="padding:10px;">
                    <span id="sendMedia" class="glyphicon glyphicon-film"></span>
                    <span id="sendMsg" class="glyphicon glyphicon-share-alt"></span>
                </div>                
            </div>
        </div>       
    </div>
</div>
